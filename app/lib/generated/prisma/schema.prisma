generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id    String @id
  email String @unique
  notes Note[]
}

model Note {
  id         String   @id @default(cuid())
  title      String
  content    String
  tags       String[]
  lastEdited DateTime
  isArchived Boolean
  userId     String
  user       User     @relation(fields: [userId], references: [id])
}
